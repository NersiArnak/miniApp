<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/address_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@color/grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp">

            <androidx.appcompat.widget.AppCompatImageView
              android:layout_gravity="center"
                android:id="@+id/imageLibrary"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_marginTop="5dp"
                tools:src="@drawable/running" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_gravity="center"
                android:id="@+id/titleLibrary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                tools:text="Бег на улицее" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/descriptionLibrary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="15sp"
                android:layout_marginTop="2dp"
                tools:text="Начните с 5 минут разминки, включающей легкую ходьбу и растяжку. Затем начните бежать в удобном для вас темпе в течение 20 минут, стараясь поддерживать равномерное дыхание."/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>