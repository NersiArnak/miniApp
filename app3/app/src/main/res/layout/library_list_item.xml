<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/address_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@color/grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp">

            <androidx.appcompat.widget.AppCompatImageView
              android:layout_gravity="center"
                android:id="@+id/imageLibrary"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_marginTop="5dp"
                tools:src="@drawable/sup" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/titleLibrary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                tools:text="Диетический суп-пюре с курицей" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/statusLibrary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:textColor="@color/herb"
                android:textSize="17sp"
                tools:text="Статус" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/descriptionLibrary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="15sp"
                android:layout_marginTop="2dp"
                tools:text="Простой в приготовлении, вкусный, полезный и малокалорийный куриный суп-пюре подходит не только для диет, направленных на снижение веса, но и для лечебных. Если диета лечебная, то овощи должны быть хорошо проварены, поэтому время приготовления супа нужно увеличить минут на 10 на тихом огне."/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>